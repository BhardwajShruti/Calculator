<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context="com.example.android.calculator.MainActivity">

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:textSize="50px"
        android:textAlignment="viewEnd"
        android:gravity="end|bottom"

        />
    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:textSize="50dp"
        android:textAlignment="viewEnd"
        android:gravity="end|bottom"
        android:textColor="@android:color/darker_gray"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:weightSum="4"
        android:layout_weight="4"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/seven"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="7"
                android:onClick="numberClick"/>
            <Button
                android:id="@+id/four"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="4"
                android:onClick="numberClick"/>
            <Button
                android:id="@+id/one"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="1"
                android:onClick="numberClick"/>
            <Button
                android:id="@+id/dot"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="."
                android:onClick="numberClick"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/eight"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="8"
                android:onClick="numberClick"/>
            <Button
                android:id="@+id/five"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="5"
                android:onClick="numberClick"/>

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"

                android:onClick="numberClick"
                android:text="2"
                />
            <Button
                android:id="@+id/zero"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="0"
                android:onClick="numberClick"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/nine"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="9"
                android:onClick="numberClick"/>
            <Button
                android:id="@+id/six"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="6"
                android:onClick="numberClick"/>
            <Button
                android:id="@+id/three"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="3"
                android:onClick="numberClick"/>
            <Button
                android:id="@+id/clear"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="C"
                android:onClick="clearClicked"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:weightSum="5">

            <Button
                android:id="@+id/equals"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="="
                android:onClick="equalClicked"
                /> <Button
            android:id="@+id/plus"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:text="+"
            android:onClick="operatorClick"
            /> <Button
            android:id="@+id/minus"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:text="-"
            android:onClick="operatorClick"
            /> <Button
            android:id="@+id/multiply"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:text="*"
            android:onClick="operatorClick"
            />

            <Button
                android:id="@+id/divide"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="/"
                android:onClick="operatorClick"
                />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
